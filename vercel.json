{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "redirects": [
    {
      "source": "/summarizer/:path*",
      "destination": "https://summarizer.ideamanifest.com/:path*",
      "permanent": true
    },
    {
      "source": "/nammaooruspl/:path*",
      "destination": "https://nammaooruspl.ideamanifest.com/:path*",
      "permanent": true
    },
    {
      "source": "/thamizh-veedu-home/:path*",
      "destination": "https://thamizh-veedu-homes.ideamanifest.com/:path*",
      "permanent": true
    }
